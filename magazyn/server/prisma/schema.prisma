generator client {
  provider = "prisma-client-js"
}


// magazyn/server/prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  title       String
  brand       String?
  size        String?
  condition   String?
  status      String   @default("NA_MAGAZYNIE")
  priceCents  Int      @default(0)
  dimA        Int?
  dimB        Int?
  dimC        Int?
  sku         String?  @unique
  notes       String?

  photos      Photo[]
}

model Photo {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())

  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId  String

  url        String
  role       String   @default("extra") // front | back | measure1 | measure2 | extra
  order      Int?     @default(0)
  isFront    Boolean  @default(false)
  sizeBytes  Int?
}
